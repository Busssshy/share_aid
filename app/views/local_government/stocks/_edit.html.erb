<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h3 class="my-3"><b>在庫更新</b></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 text-center">
      <% if @stock.errors.any? %>
        <font size="10px"><%= @stock.errors.count %>件のエラーが発生しました</font>
        <ul>
          <% @stock.errors.full_messages.each do |message| %>
            <li class="text-left"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: stock, url: local_government_stock_path(stock), method: :patch do |f| %>
        <div class="row my-3">
          <div class="col-12 col-md-4">
            <b><%= f.label "品名" %></b>
          </div>
          <div class="col-12 col-md-8">
            <%= f.text_field :name, autofocus: true, placeholder: "1~20文字以内", size:46 %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-12 col-md-4">
            <b><%= f.label "在庫数" %></b>
          </div>
          <div class="col-12 col-md-8">
            <%= f.number_field :amount, class: "stock-custom-field" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-12 col-md-4">
            <b><%= f.label "一人当たりの必要数/日" %></b>
          </div>
          <div class="col-12 col-md-8">
            <%= f.number_field :one_daily_quantity, placeholder: "1日の一人当たりの必要数を入力してください", class: "stock-custom-field" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-12 col-md-4">
            <b><%= f.label "使用期限" %></b>
          </div>
          <div class="col-12 col-md-8">
            <%= f.date_field :deadline, class: 'custom-date-field' %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-12 col-md-4 my-md-5">
            <b><%= f.label "備考" %></b>
          </div>
          <div class="col-12 col-md-8">
            <%= f.text_area :memo, placeholder: "200文字以内", size: "46x5" %>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-12">
            <%= f.submit "更新", class: "btn btn-outline-success custom-btn-size" %>
            <%= link_to "削除", local_government_stock_path(stock), class: "btn btn-outline-danger custom-btn-size", data: { confirm: "本当に削除しますか？" }, method: :delete %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-1"></div>
  </div>
</div>
