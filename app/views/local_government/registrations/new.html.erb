<div class="container">
  <div class="row my-5">
    <div class="mx-auto">
      <h1><strong>新規登録</strong></h1>
    </div>
  </div>

  <%= form_with model: @local_government, url: registration_path(resource_name) do |f| %>
  <div class="row my-5">
　  <div class="mx-auto">

      <%= render "local_government/shared/error_messages", resource: resource %>

      <div class="field mt-4">
        <%= f.text_field :name, :placeholder => "自治体名", size: "40" %>
      </div>

      <div class="field mt-4">
        <%= f.email_field :email, :placeholder => "メールアドレス", size: "40" %>
      </div>

      <div class="field mt-4">
        <%= f.text_field :phone_number, :placeholder => "電話番号", size: "40" %>
      </div>

      <div class="field mt-4">
        <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", size: "40" %>
      </div>

      <div class="field mt-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認", size: "40" %>
      </div>
    </div>
    <div class="row my-5">
      <div class="mx-auto">
        <div class="actions">
          <%= f.submit "登録",class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row my-4">
    <div class="mx-auto">
      <%= render "local_government/shared/links" %>
    </div>
  </div>
</div>