<div class="container">
  <div class="row my-5">
    <div class="mx-auto">
      <h1><strong>ログイン</strong></h1>
    </div>
  </div>

  <%= form_with model: @local_government, url: session_path(resource_name) do |f| %>
    <div class="row my-5">
  　  <div class="mx-auto">
        <div class="field mt-4">
          <%= f.text_field :name, autofocus: true, :placeholder => "自治体名", size: "40" %>
        </div>
        <div class="field mt-4">
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", size: "40" %>
        </div>
      </div>
    </div>
    <div class="row my-5">
      <div class="mx-auto">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn  btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row my-4">
    <div class="mx-auto">
      <%= render "local_government/shared/links" %>
    </div>
   </div>
</div>