<div class="container">
  
  <div class="row my-4">
    <div class="mx-auto">
      <h2>ログイン</h2>
    </div>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="mx-auto">

      <div class="field">
        <div class="col">
          <div class="row">
            <div class="col-5">
              <div class="row">
                <div class="mx-auto">
                  <%= f.label :name, "氏名"  %>
                </div>
              </div>
            </div>
            <div class="col-7">
              <%= f.email_field :name, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>
      </div>

      <div class="field mt-3">
        <div class="col">
          <div class="row">
            <div class="col-5">
              <%= f.label :password, "パスワード" %>
            </div>
            <div class="col-7">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>
        </div>
      </div>

      <div class="action mt-4">
        <div class="col">
          <div class="row">
            <div class="col-5"></div>
            <div class="col-7">
              <%= f.submit "登録" %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <% end %>
</div>